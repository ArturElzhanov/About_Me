<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimaryLight"
                android:paddingBottom="24dp"
>


    <ImageView
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/picture"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_size"
            android:layout_marginLeft="@dimen/margin_size"
            android:layout_alignTop="@+id/picture"
            android:layout_alignBottom="@+id/picture"
            android:layout_toRightOf="@+id/picture"
            android:layout_toEndOf="@+id/picture"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|start"
                android:textSize="@dimen/portrait_text_large_size"
                android:textColor="@color/main_txt"
                android:text="Large Text"
                android:id="@+id/data_value"
                android:layout_weight="0.5"
                android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|start"
                android:textSize="@dimen/portrait_text_small_size"
                android:textColor="@color/second_txt"
                android:text="Medium Text"
                android:id="@+id/data_name"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.5"/>
    </LinearLayout>


</RelativeLayout>